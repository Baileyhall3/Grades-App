#:import utils kivy.utils
<HomeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("15CCE5")
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("33FF8B")
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .3
            text: "Grade Checker"

        Label:
            pos_hint: {"top": .8, "left": 1}
            size_hint: 1, .1
            text: "Grade Checker"

        GridLayout:
            rows: 1
            pos_hint: {"top": .7, "left": 1}
            size_hint: 1, .1
            id: course_id

        GridLayout:
            rows: 3
            pos_hint: {"top": .5, "left": 1}
            size_hint: 1, .3
            id: current_courses

        GridLayout:
            rows: 1
            pos_hint: {"top": .2, "left": 1}
            size_hint: 1, .2
            ImageButton:
                source: "icons/001-lines.png"
                on_release:
                    root.manager.transition.direction = "left"
                    app.change_screen("settings_screen")
            ImageButton:
                source: "icons/002-plus.png"
                on_release:
                    app.change_screen("plus_page")

