#:import utils kivy.utils
<PlusPage>:
    FloatLayout:
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex("33FF8B")
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("33FF8B")
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {"top": .8, "left": 1}
            size_hint: 1, .1
            text: "Grade Checker"



        GridLayout:
            rows: 1
            pos_hint: {"top": .2, "left": 1}
            size_hint: 1, .2
            ImageButton:
                source: "icons/004-arrowleft.png"
                on_release:
                    app.change_screen("home_screen")
